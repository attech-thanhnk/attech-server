# ============================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.production and update values for your server
# Usage: ./deploy-production.sh

# ============================================
# DOMAIN CONFIGURATION
# ============================================
FRONTEND_DOMAIN=attech.space
FRONTEND_DOMAIN_WWW=www.attech.space
API_DOMAIN=api.attech.space

# ============================================
# SERVER PATHS
# ============================================
# Frontend source directory (where attech-client is located)
FRONTEND_SOURCE_DIR=/home/thanhdev/attech-client

# Uploads directory (where user uploaded files are stored)
UPLOADS_DIR=/home/thanhdev/AttechServer/AttechServer/Uploads

# ============================================
# SSL CERTIFICATE PATHS
# ============================================
# Path to Let's Encrypt SSL certificates directory (will use API_DOMAIN)
SSL_CERT_BASE=/etc/letsencrypt/live
SSL_OPTIONS_FILE=/etc/letsencrypt/options-ssl-nginx.conf
SSL_DHPARAMS_FILE=/etc/letsencrypt/ssl-dhparams.pem

# ============================================
# DATABASE CONFIGURATION
# ============================================
SA_PASSWORD=AttechServer@123
DB_NAME=AttechServerDb

# ============================================
# RESOURCE LIMITS (adjust based on your VPS RAM)
# ============================================
BACKEND_MEM_LIMIT=1000
BACKEND_MEM_RESERVATION=600
FRONTEND_MEM_LIMIT=150
FRONTEND_MEM_RESERVATION=100
SQLSERVER_MEM_LIMIT=1200
SQLSERVER_MEM_RESERVATION=800
SQLSERVER_MEMORY_LIMIT_MB=1024

# ============================================
# NGINX SETTINGS
# ============================================
CLIENT_MAX_BODY_SIZE=10M
ASPNETCORE_ENVIRONMENT=Production
