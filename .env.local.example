# ============================================
# LOCAL DEVELOPMENT CONFIGURATION
# ============================================
# Copy this file to .env.local and update paths for your machine
# Usage: docker-compose -f docker-compose.fullstack.yml --env-file .env.local up -d

# ============================================
# FRONTEND SOURCE PATH
# ============================================
# Windows absolute path example:
# FRONTEND_SOURCE_DIR=C:/Users/Admin/ThanhNK/attech-client

# Relative path (if repos are side by side):
# FRONTEND_SOURCE_DIR=../attech-client

# Default if not set: ../attech-client
FRONTEND_SOURCE_DIR=C:/Users/Admin/ThanhNK/attech-client

# ============================================
# API CONFIGURATION FOR FRONTEND BUILD
# ============================================
REACT_APP_API_PROTOCOL=http
REACT_APP_API_HOST=localhost
REACT_APP_API_PORT=
REACT_APP_API_BASE_PATH=/api

# ============================================
# DATABASE CONFIGURATION
# ============================================
SA_PASSWORD=AttechServer@123
DB_NAME=AttechServerDb

# ============================================
# RESOURCE LIMITS (for local development)
# ============================================
BACKEND_MEM_LIMIT=800
BACKEND_MEM_RESERVATION=400
FRONTEND_MEM_LIMIT=200
FRONTEND_MEM_RESERVATION=100
SQLSERVER_MEM_LIMIT=1200
SQLSERVER_MEM_RESERVATION=800
SQLSERVER_MEMORY_LIMIT_MB=1024
